<div class="container">   
    <table class="table">
        <tr>
            <th>#</th>
            <th>u#:</th>
            <th>Datum:</th>
            <th>Name:</th>
            <th>Zeit:</th>
            <th>Status:</th>
        </tr>
    
        <% @shifts.each do |shift| %>
            <% if shift.status == 0 %>
                <tr class="warning">
            <% end %>
            <% if shift.status == 1 %>
                <tr class="success">
            <% end %>
            <% if shift.status == 2 %>
                <tr class="info">
            <% end %>


            
        <td><%= shift.id %></td>
       <td><%= shift.unique_identifier %></td>
        <td><%= shift.date %></td>  
        <td><%= shift.name %></td>
        <td><%= shift.time %></td>
        <% if shift.status == 1 %>
            <td><i class="fa fa-check-square" aria-hidden="true"></i></td>
        <% end %>
        <% if shift.status == 2 %>
            <td><i class="fa fa-bed" aria-hidden="true"></i></td>
        <% end %>
        <% if shift.status == 0 %>
            <td><i class="fa fa-question-circle" aria-hidden="true"></i></td>
        <% end %>
        <td><%= link_to 'LÃ¶schen', shift, method: :delete, data: { confirm: 'Sicher?' } %></td>
        </tr>
        <% end %>
        
    </table>
</div>