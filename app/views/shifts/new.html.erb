<%= form_for @shift do |f| %>
	<div class="form-group">
	<%= f.label :name %>
	<%= f.text_field :name, class: 'form-control' %>
	</div>
	
	<div class="form-group">
	<%= f.label "Zeit" %>
	<%= f.text_field :time, class: 'form-control' %>
	</div>
	
	<div class="form-group">
	<%= f.label "Datum:" %>
	<%= f.text_field :date, class: 'form-control' %>

	<%= f.submit 'Submit', class: 'btn btn-default' %>
<% end %>