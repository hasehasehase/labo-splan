<div class="container">
  <div>    <%= link_to "Übersicht", shifts_path, class: "btn btn-primary new-shift-btn" %>
  <h3>SCHICHT:</h3> <br><br>
  <div class="center">
    <h4><%= @shift.name %></h4>
  </div>
    <table class="table well">
      <th>Datum:</th>
      <th>Zeit:</th>
      <th>Status:</th>
      <tr>
      <td><%= Date.strptime( @shift.date, '%Y-%m-%d').strftime('%d. %m. %Y') %></td>
      <td><%= @shift.time %></td>
        <% if @shift.status == 1 %>
            <td><i class="fa fa-check-square" aria-hidden="true"></i></td>
        <% end %>
        <% if @shift.status == 2 %>
            <td><i class="fa fa-bed" aria-hidden="true"></i></td>
        <% end %>
        <% if @shift.status == 0 %>
            <td><i class="fa fa-question-circle" aria-hidden="true"></i></td>
        <% end %>
        <br><br>
      </tr>
    </table>
      <div class="center">
        <%= link_to "Bestätigen", confirm_path, class: "btn btn-default btn-primary" %>
        <%= link_to "Ablehnen", deny_path, class: "btn btn-default btn-warning" %>
        <%= link_to "Löschen", delete_path, class: "btn btn-default btn-danger", data: { confirm: 'Wirklich löschen?' } %>
      </div>
  </div>
</div>